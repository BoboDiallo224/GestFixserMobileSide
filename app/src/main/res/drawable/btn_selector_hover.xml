<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!--Change color button if user clicked-->
        <item android:state_pressed="true">
            <shape >
                <solid
                    android:color="@android:color/transparent" />
                <stroke
                    android:width="1dp"
                    android:color="@color/shape_blue" />
                <corners
                    android:radius="30dp" />
            </shape>
        </item>
        <item>
            <shape >
                <gradient
                    android:startColor="#ff2727"
                    android:endColor="#890000"
                    android:angle="270" />

                <solid
                    android:color="@color/purple_200"><!--88B6B6B6-->
                </solid>

                <stroke
                    android:width="0dp"
                    android:color="@color/shape_blue"/>
                <corners
                    android:radius="30dp" />
                <!--<padding
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp"
                    android:bottom="10dp" />-->
            </shape>
        </item>


</selector>