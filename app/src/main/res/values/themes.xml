<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FixserMobileApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <!-- <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
    </style>

    <!--<style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>-->

    <style name="Base_ToolbarTheme">
        <item name="android:textColorPrimary">@color/black_white</item>
        <item name="android:textColorSecondary">@color/design_default_color_primary</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:background">@drawable/btn_selector_hover</item>
    </style>

    <style name="myform_style">
        <item name="android:textColorPrimary">@color/black_white</item>
        <item name="android:layout_marginStart">@dimen/edt_marg_start</item>
        <item name="android:layout_marginTop">@dimen/edt_marg_top</item>
        <item name="android:layout_marginEnd">@dimen/edt_marg_start</item>
        <item name="android:drawablePadding">@dimen/edt_paddin_draw</item>
        <item name="android:paddingStart">@dimen/edt_paddin_sta_end</item>
        <item name="android:paddingEnd">@dimen/edt_paddin_sta_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edit_text_rounded</item>

    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_margin">6dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CardViewStyleItemSelectProd" parent="Widget.MaterialComponents.CardView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginStart">@dimen/edt_marg_start</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">@dimen/edt_marg_start</item>
        <item name="android:paddingStart">@dimen/edt_paddin_sta_end</item>
        <item name="android:paddingEnd">@dimen/edt_paddin_sta_end</item>
    </style>



    <style name="Theme.FixserMobileApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FixserMobileApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FixserMobileApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="Theme.FixserMobileApp.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mySpinnerItemStyle">
        <item name="android:textColor">@color/myspinner_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FixserMobileApp.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FixserMobileApp.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>