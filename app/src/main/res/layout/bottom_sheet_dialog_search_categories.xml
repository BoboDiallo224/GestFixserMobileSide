<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_searchEnterCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/txt_searchEnterAllCategories"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcv_searchEnterCategories"
            android:layout_marginStart="@dimen/marg_top10"
            android:layout_marginTop="@dimen/marg_top10"
            android:layout_marginEnd="@dimen/marg_top10"
            android:background="@drawable/btn_rounded_corner"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="5dp"
            android:text="All Categories"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>